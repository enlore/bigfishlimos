$neonGreen = #7BE964
$neonPurp = #C42BE5
$gold = #F4DC7A
$shinyBlack = #07080C

$tablet = 768px
$medium = 900px
$large  = 1200px

@import 'grid'
@import 'util'
@import 'gradients.styl'
@import 'fonts'

*
    box-sizing border-box

body 
    background-color $shinyBlack
    font-family sans-serif
 
    margin 0
    height 100%
    font-size 24px

.btn
    border-radius 5px
    padding 0.75em

 
.btn-cta
    background-color $gold
    color $shinyBlack
    box-shadow 2px 2px 0px 2px $neonPurp
    border none

header
    $headPad = 2em
    padding-top $headPad
    padding-bottom $headPad
    background-image url('/img/bg.jpg')
    background-position 0px -400px
    min-height 1px
    overflow hidden
    .logo
        margin 0 auto
        @media screen and (min-width: $tablet)
            margin 0
            float right
            margin-right 3em
 
.boxes-section
    border-top 1px solid $neonGreen
    border-bottom 1px solid $neonGreen
    position relative
    z-index 1
    $sectionPad = 4em
    padding-bottom $sectionPad
    padding-top $sectionPad
    vertical(darken($neonPurp, 70%), $neonPurp)

.boxes .col-sm-1-3
    color $gold
    padding 0.3em 0.4em 1em 0.4em

    @media screen and (min-width: $tablet)
        min-height 476px

    @media screen and (min-width: $medium)
        min-height 454px

    @media screen and (min-width: 1200px)
        min-height 300px

    transition all 0.2s ease
    box-shadow 0px 0px 2px 4px transparent
    z-index 4
    p
        font-size 30px

    h1 
        font-size 28px
        @media screen and (min-width: $medium)
            font-size 36px
        
    &:hover
        transform translate3d(0px, -3px, 0px)
        box-shadow 0px 4px 20px 4px $gold
        z-index 5
        border-radius 4px

    background-color $shinyBlack
    $radEnd = lighten($shinyBlack, 5%)
    $radStart  = darken($shinyBlack, 50%)

    vertical($radStart, $radEnd)

    &:nth-child(2)
        background-color darken($shinyBlack, 25%)

        $radEnd = lighten($shinyBlack, 3%)
        $radStart  = darken($shinyBlack, 40%)
        vertical($radStart, $radEnd)

    &:nth-child(3)
        background-color darken($shinyBlack, 50%)
        $radEnd = lighten($shinyBlack, 1%)
        $radStart  = darken($shinyBlack, 80%)
        vertical($radStart, $radEnd)

        /*
    &:nth-child(1)
        background-image url('/img/lock.png')
        background-size contain
        background-repeat no-repeat
        background-position center center
        */
        

.call-cta-container
    $padding = 3em
    padding-top $padding
    padding-bottom $padding
    color $gold
    box-shadow 0px 2px 0px 0px $shinyBlack

    background-color $shinyBlack
    $radStart = lighten($shinyBlack, 2%)
    $radEnd   = darken($shinyBlack, 80%)
    radial($radStart, $radEnd)

    .btn-lg
        font-size 24px

        @media screen and (min-width: $tablet)
            font-size 52px

    p
        font-size 38px
        
        @media screen and (min-width: $tablet)
            font-size 66px

        margin 0
        margin-top 15px

footer
    $footPad = 0em
    padding-top $footPad
    padding-bottom $footPad
    background-color $gold
    margin-bottom 1em

    p
        margin 0
